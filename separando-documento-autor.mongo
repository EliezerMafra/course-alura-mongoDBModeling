
db.artigos.aggregate([
	{	// first step
		$group: {
			_id: "$autor.email", // agrupa considerando que email Ã© unico
			nome: {
				$first: "$autor.nome"
			},
			email: {
				$first: "$autor.email"
			},
			descricao: {
				$first: "$autor.descricao"
			},
			senha: {
				$first: "$autor.senha"
			},
		}
	},
	{	//second step
		$project: {
			_id: 0
		}
	},
	{	//third step
		$out: 'infoAutores'
	}
])